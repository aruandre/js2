<%- include header %>
<body class="container">	
	<h1><%= article.title %></h1>
	<h5>Written by: <%= author %></h5>
	<p>Content: <%= article.content %></p>
	<p>Article added: <%= article.dateCreated %></p>
	<!-- <p>Article modified: <%= article.dateModified %></p> -->
	<hr>
	<% if(user) { %>
		<% if(user.id == article.author) { %>
			<a href="/articles/edit/<%= article.id %>" class="btn btn-default">Edit</a>
			<a href="#" class="btn btn-danger delete-article" data-id="<%= article.id %>">Delete</a>
			<br><br>
		<% } %>
	<% } %>
</body>

<%- include footer %>